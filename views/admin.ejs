<h1 class="mt-4">Admin Page</h1>
<p class="lead mb-3">Welcome <%= user.firstname %> (Role: <%= user.role %>)</p>

<a href="/dashboard" class="btn btn-secondary bg-dark text-white">Go to Dashboard</a>

<!-- Add Item Form -->
<form class="add_item" action="/admin/add-item" method="POST">
	<div class="form-group">
		<label for="itemName">Item Name:</label>
		<input type="text" id="itemName" name="itemName" class="form-control" required>
	</div>

	<div class="form-group">
		<label for="itemDescription">Item Description:</label>
		<textarea id="itemDescription" name="itemDescription" class="form-control" required></textarea>
	</div>

	<div class="form-group">
		<label for="itemImages">Item Images (Comma-separated URLs):</label>
		<textarea type="text" id="itemImages" name="itemImages" class="form-control" required></textarea>
	</div>

	<button type="submit" class="btn btn-primary">Add Item</button>
	<hr>
</form>





<h2>Portfolio Items</h2>
<% portfolioItems.forEach(function(item) { %>
	<h3>
		<%= item.name %>
	</h3>
	<p>
		<%= item.description %>
	</p>

	<!-- Delete button for admin users -->
	<form action="/admin/delete-item" method="POST" style="display: inline;">
		<input type="hidden" name="itemId" value="<%= item._id %>">
		<button type="submit" class="btn btn-danger btn-sm">Delete this item</button>
	</form>

	<% if (item && item._id.toString()===item._id.toString()) { %>
		<!-- Edit form for the selected item -->
		<form action="/admin/edit-item/<%= item._id %>" method="POST">
			<div class="form-group">
				<label for="editItemName">Edit Item Name:</label>
				<input type="text" id="editItemName" name="itemName" class="form-control" value="<%= item.name %>" required>
			</div>

			<div class="form-group">
				<label for="editItemDescription">Edit Item Description:</label>
				<textarea id="editItemDescription" name="itemDescription" class="form-control"
					required><%= item.description %></textarea>
			</div>

			<div class="form-group">
				<label for="editItemImages">Edit Item Images (Comma-separated URLs):</label>
				<textarea type="text" id="editItemImages" name="itemImages" class="form-control"
					required><%= item.images.join(', ') %></textarea>
			</div>

			<button type="submit" class="btn btn-primary"><b>Save Changes</b></button>
			<hr>
		</form>

		<% } %>
